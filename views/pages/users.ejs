                    <th class="col3" scope="col"><strong>Email</strong></th>
                    <th class="col4" scope="col"><strong>Password</strong></th>
                  </tr>
            </thead>
            
            <tbody>
              <% for (let i = 0; i < data.length; i++) { %>
              <tr>
                <td class="col1"><%=data[i].firstname%></td>
                <td class="col2"><%=data[i].lastname%></td>
                <td class="col3"><%=data[i].email%></td>
                <td class="col4"><%=data[i].password%></td>
              </tr>
              <% } %> 
            </tbody>
          </table>
    </div>
    <%-include('../includes/footer') %>


    
</body>
</html>


